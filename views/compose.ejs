<%- include('partials/header'); -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="mb-3 form-group">
            <label for="postTitle" class="form-label">Post Title</label>
            <input class="form-control" id="postTitle" type="text" name="postTitle" />
        </div>
        <div class="mb-3 form-group">
            <label for="postContent" class="form-label">Post Content</label>
            <textarea class="form-control" id="postContent" type="text" name="postContent" rows="5"
                cols="30"></textarea>
        </div>
        <button type="submit" class="btn btn-primary form-submit">Publish</button>
    </form>
<%- include('partials/footer'); -%>